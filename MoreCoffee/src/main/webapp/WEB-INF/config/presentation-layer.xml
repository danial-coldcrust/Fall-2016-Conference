<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<!-- xmlns:p="http://www.springframework.org/schma/p" -->

	<context:component-scan base-package="com.ppp.grade.user.controller">
	</context:component-scan>
	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">

		<property name="mappings">

			<props>
				<prop key="/login.do">login</prop>
				<prop key="/signup.do">signup</prop>
				<prop key="/admin.do">admin</prop>
				<prop key="/result.do">result</prop>
        
				<prop key="/user_repair.do">user_repair</prop>
				<prop key="/userrepairproccontroller.do">user_repair_proc</prop>
				<prop key="/subjectside.do">subjectside</prop>

        <prop key="/usercreate.do">usercreate</prop>
        <prop key="/userread.do">userread</prop>
        <prop key="/userupdate.do">userupdate</prop>
        <prop key="/userdelete.do">userdelete</prop>
        <prop key="/usergetlist.do">usergetlist</prop>

        <prop key="/subjectcreate.do">subjectcreate</prop>
        <prop key="/subjectread.do">subjectread</prop>
        <prop key="/subjectupdate.do">subjectupdate</prop>
        <prop key="/subjectdelete.do">subjectdelete</prop>
        <prop key="/subjectgetlist.do">subjectgetlist</prop>
			</props>
		</property>
	</bean>

	<bean class="com.ppp.grade.user.controller.LoginController" id="login" />
	<bean class="com.ppp.grade.user.controller.SignupController" id="signup" />
	<bean class="com.ppp.grade.subject.controller.SubjectController" id="result" />
	<bean class="com.ppp.grade.user.controller.AdminController" id="admin" />
	<bean class="com.ppp.grade.user_repair.controller.UserRepairController" id="user_repair"/>
	<bean class="com.ppp.grade.user_repair.controller.UserRepairProcController" id="user_repair_proc"/>
	<bean class="com.ppp.grade.subject.controller.SubjectSideController" id="subjectside" />
  
  	<bean class="com.ppp.grade.user.controller.UserCreateController" id="usercreate" />
	<bean class="com.ppp.grade.user.controller.UserReadController" id="userread" />
	<bean class="com.ppp.grade.user.controller.UserUpdateController" id="userupdate" />
	<bean class="com.ppp.grade.user.controller.UserDeleteController" id="userdelete" />
	<bean class="com.ppp.grade.user.controller.UserGetListController" id="usergetlist" />

	<bean class="com.ppp.grade.subject.controller.SubjectCreateController" id="subjectcreate" />
	<bean class="com.ppp.grade.subject.controller.SubjectReadController" id="subjectread" />
	<bean class="com.ppp.grade.subject.controller.SubjectUpdateController" id="subjectupdate" />
	<bean class="com.ppp.grade.subject.controller.SubjectDeleteController" id="subjectdelete" />
	<bean class="com.ppp.grade.subject.controller.SubjectGetListController" id="subjectgetlist" />
</beans>
